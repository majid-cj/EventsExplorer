{
  "extends": "@react-native/typescript-config",
  "esModuleInterop": true,
  "compilerOptions": {
    "jsx": "react-native",
    "isolatedModules": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
